<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_img_250"
            android:contentDescription="@string/descricao_img"
            android:scaleType="centerCrop"
            android:src="@drawable/soad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_margin_12"
            android:text="@string/nome_musica"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_margin_14"
            android:text="@string/letra_musica"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_14" />

        <Button
            android:id="@+id/btnDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="VER DETALHES" />

    </LinearLayout>
</ScrollView>